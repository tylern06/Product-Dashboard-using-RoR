<html lang="en">
	<head>
	    <title>Products</title>
	</head>
	<body>
		<% if flash[:success] %>
			<div class='flash'> <%= flash[:success] %> </div>
		<% end %>
		<h1>Listing products</h1>
		<p><a href="/comments">All comments</a></p>
		<table>
			<th>
				<tr>
					<td>Name</td>
					<td>Description</td>
					<td>Price</td>
					<td>Category</td>
					<td></td>
				</tr>
			</th>

			<% @products.each do |product| %>
				<tr>
					<td><%= product.name %></td>
					<td><%= product.description %></td>	
					<td><%= number_to_currency(product.price) %></td>
					<td><%= product.category.name %></td>	
					<td><span id='links'><a href="/products/<%= product.id %>">Show</a> <a href="products/<%= product.id %>/edit">Edit</a> <a href="/products/<%= product.id %>" data-method='delete'>Destroy</a></span></td>	
				</tr>
			<% end %>
		</table><br>
		<a href="/products/new">New Product</a>
	</body>
</html>
	   
